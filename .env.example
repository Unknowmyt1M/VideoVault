# Flask Configuration
SESSION_SECRET=your_secure_session_secret_here
FLASK_ENV=development
DEBUG=True
PORT=5000  # Port to use for the Flask server

# Database Configuration
# For local development, you can use SQLite
# DATABASE_URL=sqlite:///instance/app.db
# For PostgreSQL (use this on production)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Data Storage
DATA_DIR=data  # Directory where JSON files for users and videos are stored

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here
# For local development without HTTPS:
# ALLOW_INSECURE_OAUTH=True  # Only use this for development, never in production
# For production, set your redirect URI:
GOOGLE_REDIRECT_URI=https://yourdomain.com/google_login/callback
